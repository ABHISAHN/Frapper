@using Frapper.Web.Helpers
@using Frapper.Web.Views.Shared.Components.SideMenu
@using Microsoft.AspNetCore.Http

<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <a href="~/Home" class="brand-link">
        <img src="~/img/Frapper.png" alt="Frapper Logo" class="brand-image img-circle elevation-3"
             style="opacity: .8">
        <span class="brand-text font-weight-light">Frapper</span>
    </a>
    <div class="sidebar">
        @if (!string.IsNullOrEmpty(Context.Session.GetString("Portal.UserName")))
        {
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="image">
                    <img id="myprofile_pic" src="" class="img-circle elevation-2" alt="User Image">
                </div>
                <div class="info">
                    <a href="#" class="d-block">Hi, @Context.Session.GetString("Portal.UserName") </a>
                </div>
            </div>
        }
        else
        {
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="info">
                    <a href="#" class="d-block">Hi, Visitor</a>
                </div>
            </div>
        }
      

        @(await Component.InvokeAsync<SideMenuViewComponent>())
    </div>
</aside>